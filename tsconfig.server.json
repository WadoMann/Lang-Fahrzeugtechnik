
{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "noEmit": false,
    "outDir": "./dist",
    "rootDir": "./server",
    "module": "ESNext",
    "target": "ES2022",
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true
  },
  "include": [
    "server/**/*"
  ],
  "exclude": [
    "node_modules",
    "client",
    "dist"
  ]
}
