
{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "noEmit": false,
    "allowImportingTsExtensions": false,
    "outDir": "./dist",
    "rootDir": ".",
    "module": "ESNext",
    "target": "ES2022",
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true
  },
  "include": [
    "server/**/*",
    "shared/**/*",
    "vite.config.ts"
  ],
  "exclude": [
    "node_modules",
    "client",
    "dist"
  ]
}
